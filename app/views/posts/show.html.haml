#post_show
	%h1= @post.title
	%p.username
		Posted by
		= @post.user.name
		about
		= time_ago_in_words(@post.created_at)
	%p
		Task : 
		%br
		=@post.task
	%p
		Translation :
		%br
		=@post.translation
	
	.clearfix
		.post_image_description
			= image_tag @post.image.url(:small)
		.post_data
			= link_to like_post_path(@post), method: :get, class: "btn btn-default btn-sm" do
				%span.glyphicon.glyphicon-chevron-up
				= pluralize(@post.get_upvotes.size, "Like")
			= link_to dislike_post_path(@post), method: :get, class: "btn btn-default btn-sm" do
				%span.glyphicon.glyphicon-chevron-down
				= pluralize(@post.get_downvotes.size, "Dislike")
			%p.data
				%span.glyphicon.glyphicon-comment
				= pluralize(@post.comments.count, "Comment")
			- if @post.user == current_user
				= link_to "Edit", edit_post_path(@post), class: "btn btn-default btn-sm"
				= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-sm"

#comments
	%h2.comment_count= pluralize(@post.comments.count, "Comment")
	- @comments.each do |comment|
		.comment
			%p.username= comment.user.name
			%p.content= comment.content
		.post_data
			= link_to "Like Comment", like_comment_path(comment), method: :get, class: "btn btn-default btn-sm"
		.post_data
			= render "comments/form"
